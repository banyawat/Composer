<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/right_hand"
        android:id="@+id/handView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_panorama_fish_eye"
        android:id="@+id/controllerImage01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_panorama_fish_eye"
        android:id="@+id/controllerImage02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_panorama_fish_eye"
        android:id="@+id/controllerImage03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_panorama_fish_eye"
        android:id="@+id/controllerImage04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_panorama_fish_eye"
        android:id="@+id/controllerImage05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/controllerText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/controllerImage01"
        app:layout_constraintLeft_toLeftOf="@id/controllerImage01"
        app:layout_constraintRight_toRightOf="@id/controllerImage01"/>

    <TextView
        android:id="@+id/controllerText02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/controllerImage02"
        app:layout_constraintLeft_toLeftOf="@id/controllerImage02"
        app:layout_constraintRight_toRightOf="@id/controllerImage02"/>

    <TextView
        android:id="@+id/controllerText03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/controllerImage03"
        app:layout_constraintLeft_toLeftOf="@id/controllerImage03"
        app:layout_constraintRight_toRightOf="@id/controllerImage03"/>

    <TextView
        android:id="@+id/controllerText04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/controllerImage04"
        app:layout_constraintLeft_toLeftOf="@id/controllerImage04"
        app:layout_constraintRight_toRightOf="@id/controllerImage04"/>

    <TextView
        android:id="@+id/controllerText05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/controllerImage05"
        app:layout_constraintLeft_toLeftOf="@id/controllerImage05"
        app:layout_constraintRight_toRightOf="@id/controllerImage05"/>

</android.support.constraint.ConstraintLayout>