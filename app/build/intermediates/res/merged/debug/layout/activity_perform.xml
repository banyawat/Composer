<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perform_background"
    tools:context="cpe.com.composer.PerformActivity">

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton3"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/activeInstrumentGridView"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="368dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="INITIAL"
        android:textColor="@color/buttonText"
        android:textSize="50dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/backToInitialButton"
        android:background="@drawable/buttonview02"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/activeInstrumentGridView"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton3"
        app:layout_constraintHorizontal_bias="0.29" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/layoutview01"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/activeInstrumentGridView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/toggleButton3"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.1">

        <TextView
            android:text="87 BPM"
            android:textColor="@color/buttonText"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bpmtext"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <cpe.com.composer.viewmanager.ComposerVerticalSeekbar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/volumeAdjustBar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="100"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_action_volume"
            android:id="@+id/imageView2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/linearLayout">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/vuMeterViewL"
                android:max="100"
                android:progress="33"
                android:progressDrawable="@drawable/vu_meter"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:id="@+id/vuMeterViewR"
                android:max="100"
                android:progress="33"
                android:progressDrawable="@drawable/vu_meter" />
        </LinearLayout>

        <TextView
            android:text="L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Ltext"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout" />

        <TextView
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/linearLayout"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:layout_marginBottom="8dp" />

    </android.support.constraint.ConstraintLayout>

    <GridView
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:numColumns="4"
        android:gravity="center"
        android:stretchMode="columnWidth"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/activeInstrumentGridView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.71000004"
        android:layout_width="800dp" />

</android.support.constraint.ConstraintLayout>
