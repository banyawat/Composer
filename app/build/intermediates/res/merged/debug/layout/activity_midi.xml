<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_midi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cpe.com.composer.MidiActivity">

    <Button
        android:text="DRUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="108dp"
        android:id="@+id/drumPlayButton" />

    <Button
        android:text="STOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/drumPlayButton"
        android:layout_toRightOf="@+id/drumPlayButton"
        android:layout_toEndOf="@+id/drumPlayButton"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/midiStopButton" />

    <Button
        android:text="BASS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drumPlayButton"
        android:layout_alignLeft="@+id/drumPlayButton"
        android:layout_alignStart="@+id/drumPlayButton"
        android:layout_marginTop="24dp"
        android:id="@+id/bassPlayButton" />

    <Button
        android:text="GUITAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bassPlayButton"
        android:layout_alignRight="@+id/bassPlayButton"
        android:layout_alignEnd="@+id/bassPlayButton"
        android:layout_marginTop="28dp"
        android:id="@+id/guitarPlayButton" />

    <Button
        android:text="KeyChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keyChange"
        android:layout_marginRight="160dp"
        android:layout_marginEnd="160dp"
        android:layout_alignBaseline="@+id/midiStopButton"
        android:layout_alignBottom="@+id/midiStopButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="DRUM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bassPlayButton"
        android:layout_alignLeft="@+id/midiStopButton"
        android:layout_alignStart="@+id/midiStopButton"
        android:id="@+id/drum2PlayButton" />

    <Button
        android:text="CHECKARR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkArray"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
